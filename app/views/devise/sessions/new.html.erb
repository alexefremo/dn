<h2>Login</h2>

<div class="facebook-login-form">
<p class="login-facebook">You have a facebook account?</p>
<p class="login-with-facebook">Login this site using your facebook account.</p>
<%= link_to image_tag('/img/loginface.png'), user_omniauth_authorize_path(:facebook), class: 'facebook-login-image'%>
</div>

<div class="standart-login-form">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="login-email"><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div class="login-password"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="login-remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="login-submit"><%= f.submit "LOG IN" %></div>
<% end %>

<div class="forgot-link" ><%= link_to_modal "Forgot your login/password?", new_user_password_path %></div>
</div>
